<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content"
    <RelativeLayout android:background="#ffffff" android:layout_width="match_parent" android:layout_height="UNKNOWN_DATA_0x4b01">
        <ImageView android:id="@+id/device_type" android:layout_width="UNKNOWN_DATA_0x4b01" android:layout_height="match_parent" />
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/device_type" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="#1d0101" android:id="@+id/device_name" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:textSize="12sp" android:textColor="#e0e0e0" android:id="@+id/connect_state" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView android:background="@drawable/arrow_grey" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_alignParentRight="true" android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>
