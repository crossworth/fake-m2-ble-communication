                    <TextView android:textSize="12dp" android:textColor="@color/white" android:id="@+id/summay_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/summay_tv" android:layout_centerVertical="true" />
