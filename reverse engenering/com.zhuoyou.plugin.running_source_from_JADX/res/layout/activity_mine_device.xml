    <View app:layout_height="UNKNOWN_DATA_0x1401" style="@style/DividerLargeView" />
    <RelativeLayout app:id="@+id/rl_device_layout" app:background="@drawable/setting_item_background" app:layout_width="match_parent" app:layout_height="UNKNOWN_DATA_0x4801" app:onClick="onClick">
