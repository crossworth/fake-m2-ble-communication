        <TextView app:textSize="@dimen/device_layout_text_size" app:textColor="@color/device_layout_text_color" app:id="@+id/tv_device_name" app:paddingLeft="@dimen/device_layout_start_padding" app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_toRightOf="@+id/img_device_icon" app:layout_centerVertical="true" />
