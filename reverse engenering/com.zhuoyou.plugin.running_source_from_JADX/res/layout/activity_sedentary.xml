<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.zhuoyou.plugin.running.view.MyActionBar android:id="@+id/actionbar" android:custom_back_title="@string/sedentary_notice" style="@style/DefaultActionBar" />
    <TextView android:textSize="12dp" android:textColor="@color/sedentary_message_text_color" android:paddingLeft="@dimen/device_layout_start_padding" android:paddingTop="12dp" android:paddingRight="@dimen/device_layout_end_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sedentary_message_text" />
    <RelativeLayout android:layout_marginTop="12dp" style="@style/device_rl_layout_style">
        <TextView android:text="@string/sedentary_switch" style="@style/device_text_style" />
        <CheckBox android:id="@+id/cb_sedentary" android:onClick="onClick" style="@style/devcie_checkbox_style" />
    </RelativeLayout>
    <TextView android:text="@string/title_sedentary_duration" style="@style/device_title_text_style" />
    <RelativeLayout android:id="@+id/rl_start_time" android:onClick="onClick" style="@style/device_rl_layout_style">
        <TextView android:text="@string/sedentary_start_time" style="@style/device_text_style" />
        <TextView android:id="@+id/tv_start_time" android:text="@string/not_open" style="@style/device_text_end_style" />
    </RelativeLayout>
    <com.droi.library.pickerviews.picker.TimePickerView android:id="@+id/tp_start_time" android:visibility="gone" android:layout_width="match_parent" android:layout_height="UNKNOWN_DATA_0x9601" />
    <RelativeLayout android:id="@+id/rl_end_time" android:onClick="onClick" style="@style/device_rl_layout_style">
        <TextView android:text="@string/sedentary_end_time" style="@style/device_text_style" />
        <TextView android:id="@+id/tv_end_time" android:text="@string/not_open" style="@style/device_text_end_style" />
    </RelativeLayout>
    <com.droi.library.pickerviews.picker.TimePickerView android:id="@+id/tp_end_time" android:visibility="gone" android:layout_width="match_parent" android:layout_height="UNKNOWN_DATA_0x9601" />
    <RelativeLayout android:id="@+id/rl_duration" android:onClick="onClick" style="@style/device_rl_layout_style">
        <TextView android:text="@string/sedentary_time_bewteen" style="@style/device_text_style" />
        <TextView android:id="@+id/tv_interval_time" android:text="@string/not_open" style="@style/device_text_end_style" />
    </RelativeLayout>
    <com.droi.library.pickerviews.picker.NumberPickerView android:id="@+id/np_duration_num" android:visibility="gone" android:layout_width="match_parent" android:layout_height="UNKNOWN_DATA_0x9601" />
</LinearLayout>
