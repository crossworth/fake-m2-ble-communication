            <ImageView app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginLeft="16dp" app:src="@drawable/wx_guide_point2" />
            <ImageView app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginLeft="16dp" app:src="@drawable/wx_guide_point2" />
            <ImageView app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginLeft="16dp" app:src="@drawable/wx_guide_point2" />
        </LinearLayout>
        <ImageView app:id="@+id/img_point" app:layout_width="wrap_content" app:layout_height="wrap_content" app:src="@drawable/wx_guide_point1" />
    </FrameLayout>
</RelativeLayout>
