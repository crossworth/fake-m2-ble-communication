<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res-auto" app:id="@+id/activity_weixin_guide" app:background="@color/main_style_background" app:layout_width="match_parent" app:layout_height="match_parent">
