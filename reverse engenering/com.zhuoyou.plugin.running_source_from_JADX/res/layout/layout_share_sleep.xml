<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/share_back_sleep" android:scaleType="centerCrop" />
    <LinearLayout android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:text="@string/share_sleep" style="@style/ShareTitleTextView" />
        <LinearLayout android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/share_value_top_margin">
            <TextView android:id="@+id/tv_sleep_hour" android:text="0" style="@style/ShareValueTextView" />
            <TextView android:layout_marginLeft="5dp" android:text="h" style="@style/ShareValueUnitTextView" />
            <TextView android:id="@+id/tv_sleep_min" android:layout_marginLeft="10dp" android:text="0" style="@style/ShareValueTextView" />
            <TextView android:layout_marginLeft="5dp" android:text="min" style="@style/ShareValueUnitTextView" />
        </LinearLayout>
        <TextView android:id="@+id/tv_date" android:text="2016.01.01" style="@style/ShareDateTextView" />
    </LinearLayout>
</FrameLayout>
